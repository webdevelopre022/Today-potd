class Solution {
  public:
    int maxWater(vector<int> &arr) {
        // code here
        int left = 0, right = arr.size() - 1;
        int maxArea = 0;
        while(left < right){
            int height = min(arr[left] , arr[right]);
            int diff = right - left;
            maxArea = max(maxArea , height * diff);
            if(arr[left] < arr[right]){
                left++;
            }
            else{
                right--;
            }
        }
        return maxArea;
    }
};
